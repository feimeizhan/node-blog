extends layout
block append link
	link(href="/static/lib/quill/quill.bubble.css", rel="stylesheet")
block content
	p
		h3= title
		#hidden-text.hidden= JSON.stringify(text)
		#other-info
			span.text-muted tags:
				each value, index in tags
					span.mx-1.label.label-default= value
			span.text-muted create time: 
			span.text-muted= lastModified.toDateString()
		hr
		#editor
	#disqus_thread
block append script
	script(src="/static/lib/quill/quill.js", type="text/javascript" defer)
	script(src="/static/js/article.js", type="text/javascript" defer)
	script.
		var disqus_config = function () {
			var url = window.location.href;
			this.page.url = url;  // Replace PAGE_URL with your page's canonical URL variable
			this.page.identifier = url.split('/').pop(); // Replace PAGE_IDENTIFIER with your page's unique identifier variable
		};
		(function() { // DON'T EDIT BELOW THIS LINE
		var d = document, s = d.createElement('script');
		s.src = 'https://reply2future-pw.disqus.com/embed.js';
		s.setAttribute('data-timestamp', +new Date());
		(d.head || d.body).appendChild(s);
		})();
	noscript
		| Please enable JavaScript to view the
		a(href="https://disqus.com/?ref_noscript") comments powered by Disqus.
