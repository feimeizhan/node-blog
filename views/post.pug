extends layout
block append link
	link(href="/lib/quill/quill.snow.css", rel="stylesheet")
block page
	- var menu = 'post'
block content
	h2 Post an article
	#info-alert.alert(role="alert")
	.col-md-8
		form#article-form(role="form")
			.form-group
				label(for="title") Title
				input#title.form-control(name="title", type="text", placeholder="Javascript is good")
			.form-group
				label(for="slug") Slug
				input#slug.form-control(name="slug", type="text", placeholder="js-good")
				span.help-block This string will be used in the URL.
			.form-group
				label(for="tags") Tags
				input#tags.form-control(name="tags", type="text", placeholder="js")
				span.help-block This string will be used in the Category,and seperate with comma(,).
			.form-group
				label(for="text") Text
				#editor
			p
				button.btn.btn-primary(type="submit") Save

block append script
	script(src="/lib/quill/quill.js", type="text/javascript")
	script(src="/js/post.js", type="text/javascript" defer)
